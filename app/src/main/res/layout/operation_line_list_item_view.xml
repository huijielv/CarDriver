<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.List" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.longrangdriving.OperationLineListItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d5"
                android:layout_marginRight="@dimen/d20"
                android:layout_toLeftOf="@+id/midImc"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="@{viewModel.entity.startSite}"
                android:textColor="#ff333333"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/midImc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@{viewModel.stationBg}">

            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d5"
                android:layout_toRightOf="@+id/midImc"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@{viewModel.entity.endSite}"
                android:textColor="#ff333333"
                android:textSize="16sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="23dp"></View>
    </LinearLayout>


</layout>