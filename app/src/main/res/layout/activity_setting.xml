<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.mine.SettingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white">


            <ImageView
                style="@style/Back_Btn_Style_1"
                app:onClickCommand="@{viewModel.back}" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/settings"
                android:textColor="@color/rx_333333"
                android:textSize="18sp" />

        </FrameLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <FrameLayout
                    android:id="@+id/tencent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    app:bl_pressed_solid_color="@color/rx_f2f2f2"
                    app:bl_unPressed_solid_color="@color/rx_ffffff"
                    app:onClickCommand="@{viewModel.navStatusSet}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:text="外置导航"
                        android:textColor="@color/rx_555555"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@{ viewModel.navStatus == 0 ?      @drawable/icon_map_pre :@drawable/icon_map_nm }" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:bl_pressed_solid_color="@color/rx_f2f2f2"
                    app:bl_unPressed_solid_color="@color/rx_ffffff"
                    app:onClickCommand="@{viewModel.pwdMOdify}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:text="@string/change_pwd"
                        android:textColor="@color/rx_555555"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pay_right" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:bl_pressed_solid_color="@color/rx_f2f2f2"
                    app:bl_unPressed_solid_color="@color/rx_ffffff"
                    app:onClickCommand="@{viewModel.navSet}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:text="@string/navigation_select"
                        android:textColor="@color/rx_555555"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pay_right" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:bl_pressed_solid_color="@color/rx_f2f2f2"
                    app:bl_unPressed_solid_color="@color/rx_ffffff"
                    app:onClickCommand="@{viewModel.about}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:text="@string/about"
                        android:textColor="@color/rx_555555"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pay_right" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:bl_pressed_solid_color="@color/rx_f2f2f2"
                    app:bl_unPressed_solid_color="@color/rx_ffffff"
                    app:onClickCommand="@{viewModel.powerSettings}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:text="运行设置"
                        android:textColor="@color/rx_555555"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pay_right" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    app:bl_pressed_solid_color="@color/rx_f2f2f2"
                    app:bl_unPressed_solid_color="@color/rx_ffffff"
                    app:onClickCommand="@{viewModel.logout}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/logout"
                        android:textColor="@color/rx_eb834a"
                        android:textSize="14sp" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>