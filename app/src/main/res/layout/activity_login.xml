<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <import type="android.text.InputType" />

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/rx_333333"
                android:textSize="18sp" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginTop="@dimen/d60"
            android:layout_marginRight="@dimen/d20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout style="@style/InputFrameStyle">

                    <EditText
                        android:id="@+id/et_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d10"
                        android:layout_toLeftOf="@+id/re_clear_account"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:hint="@string/input_phone"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:text="@{viewModel.phone}"
                        android:textColorHint="@color/grey_8e"
                        android:textSize="14sp"
                        app:addTextChangedListener="@{viewModel.phoneWatcher}" />

                    <RelativeLayout
                        android:id="@+id/re_clear_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d10"
                        android:clickable="true"
                        android:padding="@dimen/d5"
                        android:visibility="@{TextUtils.isEmpty(viewModel.phone) ? View.GONE : View.VISIBLE}"
                        app:onClickCommand="@{viewModel.clearAccount}">

                        <ImageView
                            android:id="@+id/iv_clear_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_login_close" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey_cc" />

                <RelativeLayout style="@style/InputFrameStyle">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d10"
                        android:layout_marginRight="@dimen/d5"
                        android:layout_toLeftOf="@+id/re_clear_pass"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:hint="@string/input_pass"
                        android:inputType="@{viewModel.pwdShow == 0 ? InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_VARIATION_PASSWORD : InputType.TYPE_TEXT_VARIATION_VISIBLE_PASSWORD}"
                        android:maxLength="28"
                        android:singleLine="true"
                        android:text="@{viewModel.pwd}"
                        android:textColorHint="@color/grey_8e"
                        android:textSize="14sp"
                        app:addTextChangedListener="@{viewModel.pwdWatcher}"
                        app:setSelection="@{viewModel.pwd.length()}" />

                    <RelativeLayout
                        android:id="@+id/re_clear_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d10"
                        android:layout_toLeftOf="@+id/re_pass_show"
                        android:clickable="true"
                        android:padding="@dimen/d5"
                        android:visibility="@{TextUtils.isEmpty(viewModel.pwd) ? View.GONE : View.VISIBLE}"
                        app:onClickCommand="@{viewModel.clearPwd}">

                        <ImageView
                            android:id="@+id/iv_clear_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_login_close" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/re_pass_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d10"
                        android:clickable="true"
                        android:padding="@dimen/d5"
                        app:onClickCommand="@{viewModel.showPwd}">

                        <ImageView
                            android:id="@+id/iv_pass_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@{viewModel.pwdShow == 0 ? @drawable/ic_pwd_hide : @drawable/ic_pwd_show}" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_cc" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_marginTop="@dimen/d30"
                android:orientation="horizontal"
                app:onClickCommand="@{viewModel.login}">

                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textSize="16sp"
                    app:bl_corners_radius="5dp"
                    app:bl_enabled_solid_color="@color/rx_4c4d5b"
                    app:bl_enabled_textColor="@color/rx_ffffff"
                    app:bl_unEnabled_solid_color="@color/grey_ee"
                    app:bl_unEnabled_textColor="@color/grey_cc"
                    app:enable="@{!TextUtils.isEmpty(viewModel.phone) &amp;&amp; viewModel.phone.length() == 11 &amp;&amp; !TextUtils.isEmpty(viewModel.pwd)}" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d25"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/re_foget_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="@dimen/d5"
                    android:paddingBottom="@dimen/d5"
                    app:onClickCommand="@{viewModel.fogetPwd}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/forget_pass"
                        android:textColor="@color/grey_8e"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>