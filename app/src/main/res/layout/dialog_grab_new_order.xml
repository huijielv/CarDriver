<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rx_transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d48"
            android:layout_marginRight="@dimen/d48"
            android:background="@drawable/bg_dailog_grab_transfer_new_order"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carPoolTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_carpool"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/d10"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone"></TextView>


            <RelativeLayout
                android:id="@+id/addressRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:paddingBottom="40dp">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/grabLl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@+id/addressRl"
                android:background="#4F5165"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/grabTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/carPoolGrabLl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:text="接单"
                        android:textColor="#ffffffff"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/markupPriceDescriptioTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffffffff"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/priceDescriptionTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d5"
                            android:text=""
                            android:textColor="#ffffffff"
                            android:textSize="11sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>