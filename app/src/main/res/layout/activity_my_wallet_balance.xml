<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <import type="android.text.InputType" />

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.mywallet.MyWalletBalanceViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <com.ymx.driver.view.shadowlayout.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:hl_layoutBackground_true="@color/white"
            app:hl_shadowColor="#14333333"
            app:hl_shadowHiddenLeft="true"
            app:hl_shadowHiddenRight="true"
            app:hl_shadowHiddenTop="true"
            app:hl_shadowLimit="3dp">

            <ImageView
                style="@style/Back_Btn_Style_1"
                app:onClickCommand="@{viewModel.back}" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/my_wallet_balance_title"
                android:textColor="@color/rx_333333"
                android:textSize="18sp" />


        </com.ymx.driver.view.shadowlayout.ShadowLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginLeft="@dimen/d15"
            android:layout_marginRight="@dimen/d15"
            android:paddingTop="@dimen/d18"
            android:paddingBottom="@dimen/d18"
            android:background="@drawable/icon_my_head_wallet_balance_head_view"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/rx_ff333333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.balacne}"
                    android:textStyle="bold"
                    android:textColor="@color/rx_ff333333"
                    android:textSize="24sp"></TextView>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:paddingLeft="34dp"
                android:paddingRight="34dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d15"
                android:background="@drawable/bg_today_income_moth"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                app:onClickCommand="@{viewModel.goToWithdrawal}"></TextView>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/wallet_balance_indicator"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/wallet_balance_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</layout>