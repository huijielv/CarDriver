<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.longrangdriving.frament.SelectRangeDrivingTimeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/d15"
        android:paddingRight="@dimen/d15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_long_range_driving_head_view"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/d15"
                    android:layout_marginTop="@dimen/d15"
                    android:text="请选择您的出车时间"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18">

                </TextView>


                <Button
                    android:id="@+id/ib_close"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/d5"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_rang_driving_btn_close"
                    app:onClickCommand="@{viewModel.ucClose}" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d22"
                android:background="@color/white"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/startSelectTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d20"
                    android:layout_toLeftOf="@+id/zTv"
                    android:background="@drawable/bg_long_driving_select_time"
                    android:paddingLeft="@dimen/d20"
                    android:paddingTop="@dimen/d8"
                    android:paddingRight="@dimen/d20"
                    android:paddingBottom="@dimen/d8"
                    android:text="@{  !TextUtils.isEmpty(viewModel.startTime) ?    viewModel.startTime :@string/select_time}"
                    android:textSize="@dimen/text_size_14"
                    app:onClickCommand="@{viewModel.startSelectTime}">

                </TextView>

                <TextView
                    android:id="@+id/zTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="至"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_18">

                </TextView>


                <TextView
                    android:id="@+id/endSelectTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_toRightOf="@+id/zTv"
                    android:background="@drawable/bg_long_driving_select_time"
                    android:paddingLeft="@dimen/d20"
                    android:paddingTop="@dimen/d8"
                    android:paddingRight="@dimen/d20"
                    android:paddingBottom="@dimen/d8"
                    android:text="@{  !TextUtils.isEmpty(viewModel.endTime)  ? viewModel.endTime :@string/select_time}"
                    android:textSize="@dimen/text_size_14"
                    app:onClickCommand="@{viewModel.endSelectTime}">

                </TextView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50"
                android:background="@color/white"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="@{(!TextUtils.isEmpty(viewModel.startTime) &amp;&amp; !TextUtils.isEmpty(viewModel.endTime))? View.VISIBLE :View.GONE }">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_marginRight="@dimen/d10"
                    android:background="@color/rx_ff8008"
                    android:gravity="center"
                    android:paddingTop="@dimen/d10"
                    android:paddingBottom="@dimen/d10"
                    android:text="确认"
                    android:textColor="@color/white"
                    app:onClickCommand="@{viewModel.confirm}">

                </TextView>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white"></View>
        </LinearLayout>


    </LinearLayout>
</layout>