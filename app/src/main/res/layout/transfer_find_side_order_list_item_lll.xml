<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.transportsite.FindSiteOrderListItemView" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginTop="@dimen/d15"
        android:layout_marginRight="@dimen/d15"
        android:background="@drawable/bg_view"
        android:orientation="vertical"
        android:paddingTop="@dimen/d10"
        android:paddingBottom="@dimen/d10">

        <LinearLayout
            android:id="@+id/timeLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d10"
                android:src="@drawable/icon_time">

            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d10"
                android:text="@{viewModel.entity.appointmentTime}"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/infoLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeLl"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_headiv"
                    />

                <TextView
                    android:id="@+id/tv_phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d2"
                    android:text="@{viewModel.entity.phone}"
                    android:textColor="@color/rx_ff333333"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/startAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="@dimen/d15"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_trip_order_start_address"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@{viewModel.entity.srcName}"
                        android:textColor="@color/rx_ff333333"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/lineIv"
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/d16"
                    android:layout_marginTop="@dimen/d18"
                    android:src="@drawable/icon_transfer_find_order_list_item_dotted_line">

                </ImageView>


                <LinearLayout
                    android:id="@+id/endAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lineIv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="@dimen/d15"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_trip_order_end_address"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@{viewModel.entity.desName}"
                        android:textColor="@color/rx_ff333333"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>


            </RelativeLayout>


            <View
                android:layout_width="75dp"
                android:layout_height="match_parent">

            </View>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoLl"
            android:layout_marginTop="@dimen/d10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/d10"
                android:textColor="@color/white"
                android:background="@drawable/bg_car_polling"
                android:paddingLeft="7dp"
                android:paddingTop="@dimen/d2"
                android:paddingRight="7dp"
                android:paddingBottom="@dimen/d2"
                android:text="拼"
                android:visibility="@{viewModel.entity.isCarpool==0?View.GONE:View.VISIBLE}">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/d10"
                android:background="@drawable/bg_transfer_order_hotel"
                android:paddingLeft="7dp"
                android:paddingTop="@dimen/d2"
                android:paddingRight="7dp"
                android:paddingBottom="@dimen/d2"
                android:text="酒店"
                android:visibility="@{viewModel.entity.isHotel==0?View.GONE:View.VISIBLE}">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:textColor="@color/white"
                android:background="@{viewModel.payBg}"
                android:paddingLeft="7dp"
                android:paddingTop="@dimen/d2"
                android:paddingRight="7dp"
                android:paddingBottom="@dimen/d2"
                android:text="@{viewModel.payTv}"
                android:visibility="@{viewModel.entity.isMonthPay==0?View.GONE:View.VISIBLE}">

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d10"
            app:onClickCommand="@{viewModel.grabOrder}"
            android:background="@drawable/bg_soli_item"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d8"
            android:paddingTop="@dimen/d2"
            android:paddingRight="@dimen/d8"
            android:paddingBottom="@dimen/d2"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="接单"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@{viewModel.entity.estimateAmount +@string/order_details_price}"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</layout>