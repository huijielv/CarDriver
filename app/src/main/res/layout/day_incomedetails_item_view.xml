<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.TextUtils" />
        <import type="android.view.View"></import>
        <import type="me.tatarka.bindingcollectionadapter2.BindingRecyclerViewAdapter" />

        <import type="com.ymx.driver.binding.viewadapter.recyclerview.LayoutManagers" />

        <import type="com.ymx.driver.binding.viewadapter.recyclerview.LineManagers" />

        <variable
            name="adapter"
            type="BindingRecyclerViewAdapter" />

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.mywallet.DayIncomeView" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10"
            android:paddingLeft="@dimen/d15"
            android:paddingRight="@dimen/d15"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@{viewModel.entity.content}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@{viewModel.entity.income +@string/order_details_price}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"></TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/d15"
            android:paddingTop="@dimen/d8"
            android:paddingRight="@dimen/d15"
            android:paddingBottom="@dimen/d8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@{viewModel.entity.content}"
                android:textColor="#ff333333"
                android:textSize="@dimen/text_size_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:visibility="@{viewModel.entity.businessType==9 ?View.VISIBLE:View.GONE}">

                <TextView
                    android:id="@+id/income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@{viewModel.entity.income +@string/order_details_price}"
                    android:textColor="@color/rx_333333"
                    android:textSize="@dimen/text_size_14">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/income"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/d5"
                    android:text="@{ @string/left_bracket+ viewModel.entity.stateName   +@string/right_bracket }"
                    android:textColor="@color/rx_333333"
                    android:textSize="@dimen/text_size_14">

                </TextView>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.entity.businessType!=9 ?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{viewModel.entity.income +@string/order_details_price}"
                        android:textColor="@color/rx_333333"
                        android:textSize="@dimen/text_size_14"
                        android:visibility="@{   !TextUtils.isEmpty(viewModel.entity.income)  ? View.VISIBLE:View.GONE}">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d5"
                        android:text="@{ @string/left_bracket+ viewModel.entity.stateName   +@string/right_bracket }"
                        android:textColor="@color/rx_333333"
                        android:textSize="@dimen/text_size_14">

                    </TextView>


                </LinearLayout>

                <ImageView
                    android:id="@+id/turnIv"
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20"
                    android:layout_gravity="center_vertical"
                    android:src="@{viewModel.turn ? @drawable/shourumingxi_btn_shan :@drawable/shourumingxi_btn_xia}"
                    android:visibility="@{viewModel.getBusinessTypeStatus ?View.VISIBLE:View.GONE}"
                    app:onClickCommand="@{viewModel.turnUp}"></ImageView>
            </LinearLayout>


        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/d15"
            android:paddingRight="@dimen/d15"
            android:scrollbars="none"
            android:splitMotionEvents="false"
            android:visibility="@{viewModel.turn?View.VISIBLE:View.GONE}"
            app:adapter="@{adapter}"
            app:itemBinding="@{viewModel.itembinding}"
            app:items="@{viewModel.itemList}"
            app:layoutManager="@{LayoutManagers.linear()}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff2f2f2"></View>


    </LinearLayout>


</layout>