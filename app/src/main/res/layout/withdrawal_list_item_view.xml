<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.mywallet.WithdrawalListViewModelItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:onClickCommand="@{viewModel.go}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginBottom="@dimen/d10">

            <TextView
                android:id="@+id/bankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/d10"
                android:text="@{viewModel.entity.bankName}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18">


            </TextView>


            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d15"
                android:text="@{viewModel.entity.money}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18">

            </TextView>


            <TextView
                android:id="@+id/applyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bankName"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginTop="@dimen/d15"
                android:text="@{viewModel.entity.applyTime}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18">

            </TextView>


            <TextView
                android:id="@+id/stateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/money"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:text="@{viewModel.entity.stateName}"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d10"
                android:src="@drawable/icon_driver_right_arrow"></ImageView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/color_dddddd"></View>

    </LinearLayout>


</layout>