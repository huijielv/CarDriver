<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="dialog"
            type="com.ymx.driver.dialog.SafetyTipsDialog" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rx_transparent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d48"
            android:layout_marginRight="@dimen/d48"
            android:background="@drawable/bg_view"
            android:orientation="vertical"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d15"
                android:text="行程安全提示"
                android:textColor="#ff333333"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginRight="@dimen/d20"
                android:text="@string/carpooling_safety_tips"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"></View>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/rx_e1e1e1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/positiveText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="知道了"
                    android:textColor="#FF8008"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</layout>