<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.chartercar.CharterCostListItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d15">

            <TextView
                android:id="@+id/itemOrderFeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@{viewModel.entity.feeName}"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16"></TextView>


            <TextView
                android:id="@+id/itemOrderFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@{viewModel.entity.fee }"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16"></TextView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/d15"
            android:background="#F2F2F2"></View>
    </LinearLayout>


</layout>