<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="me.tatarka.bindingcollectionadapter2.BindingRecyclerViewAdapter" />

        <import type="com.ymx.driver.binding.viewadapter.recyclerview.LayoutManagers" />

        <import type="com.ymx.driver.binding.viewadapter.recyclerview.LineManagers" />

        <import type="android.view.View" />

        <variable
            name="adapter"
            type="BindingRecyclerViewAdapter" />


        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.mywallet.MonthIncomeDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <com.ymx.driver.view.shadowlayout.ShadowLayout
            android:id="@+id/titleFL"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:hl_layoutBackground_true="@color/white"
            app:hl_shadowColor="#14333333"
            app:hl_shadowHiddenLeft="true"
            app:hl_shadowHiddenRight="true"
            app:hl_shadowHiddenTop="true"
            app:hl_shadowLimit="5dp">

            <ImageView
                style="@style/Back_Btn_Style_1"
                app:onClickCommand="@{viewModel.back}" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{viewModel.title}"
                android:textColor="@color/rx_333333"
                android:textSize="18sp" />


        </com.ymx.driver.view.shadowlayout.ShadowLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d15"
            android:layout_marginTop="@dimen/d5"
            android:layout_marginRight="@dimen/d15"
            android:background="@drawable/bg_day_income_gradient"
            android:orientation="vertical"
            android:paddingTop="@dimen/d25"
            android:paddingBottom="@dimen/d25">

            <TextView
                android:id="@+id/moth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@{viewModel.monthData }"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10">


                <ImageView
                    android:layout_width="@dimen/d15"
                    android:layout_height="@dimen/d15"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/icon_income_position"
                    app:onClickCommand="@{viewModel.previousMoth}">>

                </ImageView>

                <ImageView
                    android:layout_width="@dimen/d15"
                    android:layout_height="@dimen/d15"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_income_previous"
                    app:onClickCommand="@{viewModel.nextMonth}">

                </ImageView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:baselineAligned="true"
                    android:text="ï¿¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"></TextView>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@{viewModel.totalIncome }"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"></TextView>

            </LinearLayout>


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlEnableLoadMore="false"
                app:srlEnableNestedScrolling="false"
                app:srlEnablePreviewInEditMode="false"
                app:srlEnableRefresh="false"
                app:srlHeaderHeight="40dp"
                app:srlHeaderTriggerRate="0.5">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:splitMotionEvents="false"
                    app:adapter="@{adapter}"
                    app:itemBinding="@{viewModel.itembinding}"
                    app:items="@{viewModel.monthIncomeList}"
                    app:layoutManager="@{LayoutManagers.linear()}" />

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlAccentColor="@android:color/black"
                    app:srlTextSizeTime="12sp"
                    app:srlTextSizeTitle="14sp" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </FrameLayout>


    </LinearLayout>
</layout>
