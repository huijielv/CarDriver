<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ymx.driver.viewmodel.mywallet.DayIncomeItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d15"
            app:onClickCommand="@{viewModel.go}">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"
                android:text="@{viewModel.entity.time}"></TextView>

            <TextView
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d3"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"
                android:layout_toRightOf="@+id/time"
                android:text="@{viewModel.entity.week}"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginRight="@dimen/d15"
                android:textSize="@dimen/text_size_14"
                android:layout_alignParentRight="true"
                android:text="@{viewModel.entity.income +@string/order_details_price}"></TextView>


            <ImageView
                android:id="@+id/imv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_driver_right_arrow">

            </ImageView>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/d15"
            android:background="@color/white_f2"
            android:layout_height="1dp"></View>

    </LinearLayout>



</layout>