<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent">

            </View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_long_range_driving_head_view"
                android:orientation="horizontal"
                android:paddingTop="@dimen/d10"
                android:paddingBottom="@dimen/d10"

                >


                <LinearLayout
                    android:id="@+id/navigationLl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_quzheli">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d5"
                        android:text="导航"
                        android:textSize="@dimen/text_size_15">

                    </TextView>

                    <View
                        android:id="@+id/navigationlineView"
                        android:layout_width="@dimen/d25"
                        android:visibility="gone"
                        android:layout_height="@dimen/d10"></View>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/callPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_range_driving_lianxichengke">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d5"
                        android:text="联系乘客"
                        android:textSize="@dimen/text_size_15">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/canceOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_long_driving_weijiedaochengke">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d5"
                        android:text="未接到乘客"
                        android:textSize="@dimen/text_size_15">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/premiumRl"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_longdrivingshoukuanerweima">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/d5"
                        android:text="加价"
                        android:textSize="@dimen/text_size_15">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qRcodeLl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_longdrivingshoukuanerweima">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d5"
                        android:text="收款二维码"
                        android:textSize="@dimen/text_size_15">

                    </TextView>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"></View>

        </LinearLayout>

    </HorizontalScrollView>


</layout>